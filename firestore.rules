// üîê FIREBASE FIRESTORE SECURITY RULES
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User-specific data - only the user can access their own data
    match /userProgress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /userAccounts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /portfolios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /achievements/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /certifications/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Community data - read-only for authenticated users
    match /communityStats/{document} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin functions can write to community stats
    }
    
    // Demo data - publicly readable for testing
    match /demo/{document} {
      allow read: if true;
      allow write: if false;
    }
  }
}
